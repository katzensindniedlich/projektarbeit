---
import { Image } from 'astro:assets'

import Pawn from '@public/android-chrome-512x512.png'
import Layout from '@layouts/Layout.astro'
---

<Layout>
    <background>
        <Image src={Pawn} alt=Icon style={
			{
				'max-width': '100vw',
				'max-height': '100vh',
				'object-fit': 'contain',
				'transform': 'scale(.5)',
				'filter': 'drop-shadow(8px 8px 35px black)'
			}
		}/>
    </background>
</Layout>