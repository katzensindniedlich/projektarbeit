---
import { Image } from 'astro:assets'

import Pawn from '@public/pawn-256x256.png'
import Layout from '@layouts/Layout.astro'
---

<Layout>
	<link rel=preload as=image type=image/png href=pawn-256x256.png slot=head>
    <background>
        <Image src={Pawn} format=png alt=Icon style={
			{
				'max-width': '100vw',
				'max-height': '100vh',
				'object-fit': 'contain',
				'filter': 'drop-shadow(5px 5px 18px black)'
			}
		}/>
    </background>
</Layout>